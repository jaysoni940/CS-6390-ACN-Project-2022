../bin/controller.out 100 &
../bin/node.out 0 100 -1 &
../bin/node.out 1 100 -1 &
../bin/node.out 2 100 -1 &
../bin/node.out 3 100 -1 &
../bin/node.out 4 100 -1 &
../bin/node.out 5 100 -1 &